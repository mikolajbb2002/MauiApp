<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeerOrder.OrderPage">

    <StackLayout Padding="10">
        <Label Text="Dane do wysyłki" FontSize="Large" HorizontalOptions="Center" />
        
        <Entry x:Name="streetEntry" Placeholder="Ulica" />
        <Entry x:Name="cityEntry" Placeholder="Miejscowość" />
        <Entry x:Name="postalCodeEntry" Placeholder="Kod pocztowy" />
        <Entry x:Name="phoneEntry" Placeholder="Nr telefonu" Keyboard="Telephone" />

        <Button Text="Złóż zamówienie" Clicked="OnSubmitOrderButtonClicked" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        
        <Label VerticalTextAlignment="Center" x:Name="confirmationLabel" FontSize="Medium" TextColor="Green" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>